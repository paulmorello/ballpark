
<section class="show-header">
  <h2><%= @photo.title %></h2>
  <h4>By <%= @photo.user.username %></h4>

  <% if @photo.user_id == current_user.id %>
    <a href="/photos/<%=@photo.id%>/edit">Edit</a>
  <% else %>
    <p></p>
  <% end %>
</section>

<img src="<%= @photo.photo_url %>" alt="">

<form action="/photos/<%=@photo.id%>/delete" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button>Delete</button>
</form>

<form action="/comments/photo" method="post">
  <input type="hidden" name="photo_id" value="<%= @photo.id %>">
  <textarea name="body" rows="8" cols="40"></textarea>
  <button>Post Comment</button>
</form>

<% @comments.each do |comment| %>
  <h5><%= comment.user.username %></h5>
  <p><%= comment.body %></p>
<% end %>
