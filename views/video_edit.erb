<div class="video-edit-form">
  <div class="new-posts">
    <h2>Edit Video</h2>

    <form action="/videos/<%= @video.id %>" method="post">
      <input name="title" type="text" value="<%=@video.title%>">
      <select name="sport_id" type="text" value="<%= @video.sport.name %>">

        <!-- Iterates and displays all sport tags in dropdown -->
        <% @sports.each do |sport| %>
          <option value="<%= sport.id %>"><%= sport.name %></option>
        <% end %>
      </select>

      <textarea name="description" rows="8" cols="40"><%=@video.description%></textarea>
      <input name="video" type="file" placeholder="Video URL">
      <button>Save</button>
    </form>
  </div>
</div>
