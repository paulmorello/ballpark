
  <div class="profile-header">
    <h2><%= @user.username %></h2>

    <!-- Counts all user photo and video posts to display count. -->
    <h3> Posts: <%= @user_photos.count.to_i + @user_videos.count.to_i%></h3>
  </div>

  <!-- Iterates and displays all user photo, video posts -->
  <% @user_photos.each do |photo| %>
    <div class="user-posts">
      <h4><a href="/photos/<%= photo.id %>"><%= photo.title %></a></h4>
      <h5>in <%= photo.sport.name %></h5>
      <img src="<%= photo.image.url %>" alt="">
    </div>
  <% end %>

  <% @user_videos.each do |video| %>
    <div class="user-posts">
      <h4><a href="/videos/<%= video.id %>"><%= video.title %></a></h4>
      <h5>in <%= video.sport.name %></h5>
      <video width="320" height="170" src="<%= video.video.url %>" controls></video>
    </div>
  <% end %>
